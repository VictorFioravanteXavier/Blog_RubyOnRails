
<% content_for :title, "Categories" %>

<h1>Categories</h1>

<%= link_to "New Category", new_category_path, class: "btn btn-primary" %>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr> 
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <%= category.name %>
        </td>
        <td class="btn-group" role="group">
          <%= link_to "Edit", edit_category_path(category), class: "btn btn-secondary" %>
          <%= button_to "Destroy", category_path(category), method: :delete, data:{"turbo-confirm": "Are you sure?"}, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>


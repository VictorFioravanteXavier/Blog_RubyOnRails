

<article class="blog-post">
    <h2 class="blog-post-title"><%= @article.title %></h2>
    <p class="blog-post-meta">
        <%= month_day_comma_year(@article.created_at) %> by 
        <%= @article.user.email %>
    </p>

    <p><%= @article.body %></p>

    <div class="btn-group" role="group" >
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-secondary" %>
        <%= button_to "Destroy", article_path(@article), method: :delete, data: { "turbo-confirm": "Are you sure?" }, class: "btn btn-danger"%>
        <%= link_to "Back", root_path, class: "btn btn-secondary"%>

    </div>
    
</article>